<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_edittext_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/spinner_family_edit_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></Spinner>

                <EditText
                    android:layout_alignRight="@+id/spinner_family_edit_type"
                    android:id="@+id/et_family_edit_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_edittext_background"/>

                <EditText
                    android:id="@+id/et_family_edit_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:background="@drawable/border_edittext_background"/>

                <EditText
                    android:id="@+id/et_family_edit_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_edittext_background" />

            </LinearLayout>
        </android.support.constraint.ConstraintLayout>

</LinearLayout>