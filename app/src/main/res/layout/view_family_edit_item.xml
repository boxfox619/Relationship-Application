<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="14"
        android:layout_marginBottom="5dp">

        <Spinner
            android:id="@+id/spinnet_family_edit_type"
            android:layout_width="0dp"
            android:layout_columnSpan="2"
            android:layout_columnWeight="2"
            android:layout_gravity="fill"
            android:layout_marginRight="5dp"
            android:background="@drawable/border_edittext_background"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/et_family_edit_name"
            android:layout_width="0dp"
            android:layout_columnSpan="3"
            android:layout_columnWeight="3"
            android:layout_gravity="fill"
            android:background="@drawable/border_edittext_background"
            android:hint="@string/name"
            android:padding="7dp"
            android:textSize="14dp" />

        <EditText
            android:id="@+id/et_family_edit_age"
            android:layout_width="0dp"
            android:layout_columnSpan="2"
            android:layout_columnWeight="2"
            android:layout_gravity="fill"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/border_edittext_background"
            android:hint="@string/age"
            android:inputType="number"
            android:padding="7dp"
            android:textSize="14dp" />

        <EditText
            android:id="@+id/et_family_edit_desc"
            android:layout_width="0dp"
            android:layout_columnSpan="6"
            android:layout_columnWeight="6"
            android:layout_gravity="fill"
            android:background="@drawable/border_edittext_background"
            android:hint="@string/desc"
            android:padding="7dp"
            android:textSize="14dp" />

        <ImageView
            android:id="@+id/iv_family_edit_delete"
            android:layout_width="0dp"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:padding="5dp"
            android:src="@drawable/ic_close_black_24dp" />

    </GridLayout>

</LinearLayout>